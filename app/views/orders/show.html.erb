<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <h2>Order Details</h2>

  <% @order.line_items.each do |line_item| %>
    <div class="product-detail">
      <%= image_tag line_item.product.image.url, alt: line_item.product.name, class: "img-thumbnail" %>
      <div>
        <h4><%= line_item.product.name %></h4>
        <p><%= line_item.product.description %></p>
      </div>
      <div>
        <p>Quantity: <%= line_item.quantity %></p>
        <p>Total: $<%= line_item.total_price %></p>
      </div>
    </div>
  <% end %>

  <p>Email: <%= @order.email %></p>

  <%= link_to "Continue Shopping", root_path, class: "btn btn-outline-primary" %>

</section>
